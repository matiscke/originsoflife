  urldate = {2022-08-24},
  abstract = {A foundational idea in the theory of in situ planet formation is the "minimum mass extrasolar nebula" (MMEN), a surface density profile (\${\textbackslash}Sigma\$) of disk solids that is necessary to form the planets in their present locations. While most previous studies have fit a single power-law to all exoplanets in an observed ensemble, it is unclear whether most exoplanetary systems form from a universal disk template. We use an advanced statistical model for the underlying architectures of multi-planet systems to reconstruct the MMEN. The simulated physical and Kepler-observed catalogs allows us to directly assess the role of detection biases, and in particular the effect of non-transiting or otherwise undetected planets, on altering the inferred MMEN. We find that fitting a power-law of the form \${\textbackslash}Sigma = {\textbackslash}Sigma\_0{\textasciicircum}* (a/a\_0){\textasciicircum}{\textbackslash}beta\$ to each multi-planet system results in a broad distribution of disk profiles; \${\textbackslash}Sigma\_0{\textasciicircum}* = 336\_\{-291\}{\textasciicircum}\{+727\}\$ g/cm\${\textasciicircum}2\$ and \${\textbackslash}beta = -1.98\_\{-1.52\}{\textasciicircum}\{+1.55\}\$ encompasses the 16th-84th percentiles of the marginal distributions in an underlying population, where \${\textbackslash}Sigma\_0{\textasciicircum}*\$ is the normalization at \$a\_0 = 0.3\$ AU. Around half of inner planet-forming disks have minimum solid masses of \$rsim 40 M\_{\textbackslash}oplus\$ within 1 AU. While transit observations do not tend to bias the median \${\textbackslash}beta\$, they can lead to both significantly over- and under-estimated \${\textbackslash}Sigma\_0{\textasciicircum}*\$ and thus broaden the inferred distribution of disk masses. Nevertheless, detection biases cannot account for the full variance in the observed disk profiles; there is no universal MMEN if all planets formed in situ. The great diversity of solid disk profiles suggests that a substantial fraction of planetary systems experienced a history of migration.},
  keywords = {demographics,migration,mmsn},
  annotation = {ADS Bibcode: 2022arXiv220809031H},
  file = {/Users/schlecker/papers/UA/He2022.pdf}
}

@misc{He2023,

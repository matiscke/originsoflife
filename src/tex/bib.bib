@article{Hardegree-Ullman2023,
  title = {Bioverse: {{A Comprehensive Assessment}} of the {{Capabilities}} of {{Extremely Large Telescopes}} to {{Probe Earth-like O2 Levels}} in {{Nearby Transiting Habitable-zone Exoplanets}}},
  shorttitle = {Bioverse},
  author = {{Hardegree-Ullman}, Kevin K. and Apai, D{\'a}niel and Bergsten, Galen J. and Pascucci, Ilaria and {L{\'o}pez-Morales}, Mercedes},
  year = {2023},
  month = jun,
  journal = {The Astronomical Journal},
  volume = {165},
  number = {6},

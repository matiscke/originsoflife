@article{Schlichting2014,
  title = {Atmospheric {{Mass Loss During Planet Formation}}},
  author = {Schlichting, Hilke and Sari, Re'em and Yalinewich, Almog},
  year = {2014},
  journal = {eprint arXiv:1406.6435},
  eprint = {1406.6435},
  pages = {1--36},
  abstract = {We quantify the atmospheric mass loss during planet formation by examining the contributions to atmospheric loss from both giant impacts and planetesimal accretion. Giant impacts cause global motion of the ground. Using analytic self-similar solutions and full numerical integrations we find (for isothermal atmospheres with adiabatic index (\${\textbackslash}backslashgamma=5/3\$) that the local atmospheric mass loss fraction for ground velocities \$v\_g {\textbackslash}textless 0.25 v\_\{esc\}\$ is given by \${\textbackslash}backslashchi\_\{loss\}=(1.71 v\_g/v\_\{esc\}){\textasciicircum}\{4.9\}\$, where \$v\_\{esc\}\$ is the escape velocity from the target. Yet, the global atmospheric mass loss is a weaker function of the impactor velocity \$v\_\{Imp\}\$ and mass \$m\_\{Imp\}\$ and given by \$X\_\{loss\} {$\sim$} 0.4x+1.4x{\textasciicircum}2-0.8x{\textasciicircum}3\$ (isothermal atmosphere) and \$X\_\{loss\} {$\sim$} 0.4x+1.8x{\textasciicircum}2-1.2x{\textasciicircum}3\$ (adiabatic atmosphere), where \$x=(v\_\{Imp\}m/v\_\{esc\}M)\$. Atmospheric mass loss due to planetesimal impacts proceeds in two different regimes: 1) Large enough impactors \$m {\textbackslash}textgreater {\textbackslash}backslashsqrt\{2\} {\textbackslash}backslashrho\_0 ({\textbackslash}backslashpi h R){\textasciicircum}\{3/2\}\$ (25{$\sim$}km for the current Earth), are able to eject all the atmosphere above the tangent plane of the impact site, which is \$h/2R\$ of the whole atmosphere, where \$h\$, \$R\$ and \${\textbackslash}backslashrho\_0\$ are the atmospheric scale height, radius of the target, and its atmospheric density at the ground. 2) Smaller impactors, but above \$m{\textbackslash}textgreater4 {\textbackslash}backslashpi {\textbackslash}backslashrho\_0 h{\textasciicircum}3\$ (1{$\sim$}km for the current Earth) are only able to eject a fraction of the atmospheric mass above the tangent plane. We find that the most efficient impactors (per unit impactor mass) for atmospheric loss are planetesimals just above that lower limit and that the current atmosphere of the Earth could have resulted from an equilibrium between atmospheric erosion and volatile delivery to the atmosphere from planetesimals. We conclude that planetesimal impacts are likely to have played a major role in atmospheric mass loss over the formation history of the terrestrial planets. (Abridged)},
  archiveprefix = {arXiv},
  keywords = {Astrophysics - Earth and Planetary Astrophysics,photoevaporation}
}


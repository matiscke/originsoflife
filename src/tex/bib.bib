@article{Raymond2004,
  title = {Making Other Earths: Dynamical Simulations of Terrestrial Planet Formation and Water Delivery},
  shorttitle = {Making Other Earths},
  author = {Raymond, Sean N and Quinn, Thomas and Lunine, Jonathan I},

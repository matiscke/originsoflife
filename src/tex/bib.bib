@misc{Solano2023,
  title = {A Bright Triple Transient That Vanished within 50 Minutes},
  author = {Solano, Enrique and Marcy, Geoffrey W. and Villarroel, Beatriz and Geier, Stefan and Streblyanska, Alina and Lombardi, Gianluca and B{\"a}r, Rudolf E. and Andruk, Vitaly N.},
  year = {2023},
  month = oct,
  number = {arXiv:2310.09035},
  eprint = {2310.09035},
  primaryclass = {astro-ph},
  publisher = {arXiv},
  doi = {10.48550/arXiv.2310.09035},
  urldate = {2023-11-13},
  abstract = {We report on three optically bright, {\textasciitilde}15th mag, point-sources within 10 arcsec of each other that vanished within 1 hour, based on two consecutive exposures at Palomar Observatory on 1952 July 19 (POSS I Red and Blue). The three point-sources have continued to be absent in telescope exposures during 71 years with detection thresholds of {\textasciitilde}21st mag. We obtained two deep exposures with the 10.4-m Gran Telescopio Canarias on 25 and 27 April 2023 in r and g-band, both reaching magnitude 25.5 (3-sigma). The three point-sources are still absent, implying they have dimmed by more than 10 magnitudes within an hour. When bright in 1952, the most isolated transient source has a profile nearly the same as comparison stars, implying the sources are sub-arcsec in angular size and they exhibit no elongation due to movement. This triple transient has observed properties similar to other cases where groups of transients ("multiple transients") have appeared and vanished in a small region within a plate exposure. The explanation for these three transients and the previously reported cases remains unclear. Models involving background objects that are optically luminous for less than one hour coupled with foreground gravitational lensing seem plausible. If so, a significant population of massive objects with structure serving as the lenses, to produce three images, are required to explain the hundreds of sub-hour transients.},
  archiveprefix = {arXiv},
  file = {/Users/schlecker/papers/UA/Solano2023.pdf;/Users/schlecker/Zotero/storage/QSWW9IFF/2310.html}
}

@article{Sorini2024,
  title = {The Impact of the Cosmological Constant on Past and Future Star Formation},
  author = {Sorini, Daniele and Peacock, John A and Lombriser, Lucas},
  year = {2024},
  month = dec,
  journal = {Monthly Notices of the Royal Astronomical Society},
  volume = {535},
  number = {2},
  pages = {1449--1474},
  issn = {0035-8711},
  doi = {10.1093/mnras/stae2236},
  urldate = {2024-12-13},
  abstract = {We present an extended analytical model for cosmic star formation, with the aim of investigating the impact of cosmological parameters on the star formation history within the \${\textbackslash}Lambda\$CDM paradigm. Constructing an ensemble of flat \${\textbackslash}Lambda\$CDM models where the cosmological constant varies between \${\textbackslash}Lambda = 0\$ and \$10{\textasciicircum}5\$ times the observed value, \${\textbackslash}Lambda \_\{{\textbackslash}rm obs\}\$, we find that the fraction of cosmic baryons that are converted into stars over the entire history of the universe peaks at \${\textbackslash}sim\$\,27 per\,cent for \$0.01 {\textbackslash}lesssim {\textbackslash}Lambda /{\textbackslash}Lambda \_\{{\textbackslash}rm obs\} {\textbackslash}lesssim 1\$. We explain, from first principles, that the decline of this asymptotic star formation efficiency for lower and higher values of \${\textbackslash}Lambda\$ is driven, respectively, by the astrophysics of star formation, and by the suppression of cosmic structure formation. However, the asymptotic efficiency declines slowly as \${\textbackslash}Lambda\$ increases, falling below 5 per\,cent only for \${\textbackslash}Lambda {\textbackslash}gt 100 {\textbackslash}, {\textbackslash}Lambda \_\{{\textbackslash}rm obs\}\$. Making the minimal assumption that the probability of generating observers is proportional to this efficiency, and following Weinberg in adopting a flat prior on \${\textbackslash}Lambda\$, the median posterior value of \${\textbackslash}Lambda\$ is \$539 {\textbackslash}, {\textbackslash}Lambda \_\{{\textbackslash}rm obs\}\$. Furthermore, the probability of observing \${\textbackslash}Lambda {\textbackslash}le {\textbackslash}Lambda \_\{{\textbackslash}rm obs\}\$ is only 0.5 per\,cent. Although this work has not considered recollapsing models with \${\textbackslash}Lambda {\textbackslash}lt 0\$, the indication is thus that \${\textbackslash}Lambda \_\{{\textbackslash}rm obs\}\$ appears to be unreasonably small compared to the predictions of the simplest multiverse ensemble. This poses a challenge for anthropic reasoning as a viable explanation for cosmic coincidences and the apparent fine-tuning of the Universe: either the approach is invalid or more parameters than \${\textbackslash}Lambda\$ alone must vary within the ensemble.},
  keywords = {cosmology},
  file = {/Users/schlecker/papers/UA/Sorini2024.pdf;/Users/schlecker/Zotero/storage/3WQQGZLV/7896079.html}
}

@article{Sousa-Silva2020,
  title = {Phosphine as a {{Biosignature Gas}} in {{Exoplanet Atmospheres}}},
  author = {{Sousa-Silva}, Clara and Seager, Sara and Ranjan, Sukrit and Petkowski, Janusz Jurand and Zhan, Zhuchang and Hu, Renyu and Bains, William},
  year = {2020},
  month = feb,
  journal = {Astrobiology},
  volume = {20},
  number = {2},
  pages = {235--268},
  publisher = {Mary Ann Liebert, Inc., publishers},
  issn = {1531-1074},
  doi = {10.1089/ast.2018.1954},
  urldate = {2024-10-24},
  abstract = {A long-term goal of exoplanet studies is the identification and detection of biosignature gases. Beyond the most discussed biosignature gas O2, only a handful of gases have been considered in detail. In this study, we evaluate phosphine (PH3). On Earth, PH3 is associated with anaerobic ecosystems, and as such, it is a potential biosignature gas in anoxic exoplanets. We simulate the atmospheres of habitable terrestrial planets with CO2- and H2-dominated atmospheres and find that PH3 can accumulate to detectable concentrations on planets with surface production fluxes of 1010 to 1014 cm-2 s-1 (corresponding to surface concentrations of 10s of ppb to 100s of ppm), depending on atmospheric composition and ultraviolet (UV) irradiation. While high, the surface flux values are comparable to the global terrestrial production rate of methane or CH4 (1011 cm-2 s-1) and below the maximum local terrestrial PH3 production rate (1014 cm-2 s-1). As with other gases, PH3 can more readily accumulate on low-UV planets, for example, planets orbiting quiet M dwarfs or with a photochemically generated UV shield. PH3 has three strong spectral features such that in any atmosphere scenario one of the three will be unique compared with other dominant spectroscopic molecules. Phosphine's weakness as a biosignature gas is its high reactivity, requiring high outgassing rates for detectability. We calculate that tens of hours of JWST (James Webb Space Telescope) time are required for a potential detection of PH3. Yet, because PH3 is spectrally active in the same wavelength regions as other atmospherically important molecules (such as H2O and CH4), searches for PH3 can be carried out at no additional observational cost to searches for other molecular species relevant to characterizing exoplanet habitability. Phosphine is a promising biosignature gas, as it has no known abiotic false positives on terrestrial planets from any source that could generate the high fluxes required for detection.},
  keywords = {/unread,biosignatures},
  file = {/Users/schlecker/papers/UA/Sousa-Silva2020.pdf}
}

@article{Sozzetti2014,
  title = {Astrometric Detection of Giant Planets around Nearby {{M}} Dwarfs: The {{Gaia}} Potential},
  shorttitle = {Astrometric Detection of Giant Planets around Nearby {{M}} Dwarfs},
  author = {Sozzetti, A. and Giacobbe, P. and Lattanzi, M. G. and Micela, G. and Morbidelli, R. and Tinetti, G.},

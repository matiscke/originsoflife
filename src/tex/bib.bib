  author = {Helled, Ravit and Stevenson, David J. and Lunine, Jonathan I. and Bolton, Scott J. and Nettelmann, Nadine and Atreya, Sushil and Guillot, Tristan and Militzer, Burkhard and Miguel, Yamila and Hubbard, William B.},

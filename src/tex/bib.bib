}

@article{Edwards2019,
  title = {An {{Updated Study}} of {{Potential Targets}} for {{Ariel}}},
  author = {Edwards, Billy and Mugnai, Lorenzo and Tinetti, Giovanna and Pascale, Enzo and Sarkar, Subhajit},

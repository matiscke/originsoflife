@article{Carrion-Gonzalez2023,
  title = {Large {{Interferometer For Exoplanets}} ({{LIFE}}) - {{X}}. {{Detectability}} of Currently Known Exoplanets and Synergies with Future {{IR}}/{{O}}/{{UV}} Reflected-Starlight Imaging Missions},

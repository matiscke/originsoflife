@misc{Scott2023,
  title = {{{GJ3470-d}} and {{GJ3470-e}}: {{Discovery}} of {{Co-Orbiting Exoplanets}} in a {{Horseshoe Exchange Orbit}}},
  shorttitle = {{{GJ3470-d}} and {{GJ3470-e}}},
  author = {Scott, Phillip and Taylor, Jaxon and Beatty, Larry and Edlin, Jim and Keubler, Phil and Dennis, Mike and Higgins, David and Caballero, Albero and Garcia, Alberto},

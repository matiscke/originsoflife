@article{Foote2023,
  title = {False {{Positives}} and the {{Challenge}} of {{Testing}} the {{Alien Hypothesis}}},
  author = {Foote, Searra and Sinhadc, Pritvik and Mathis, Cole and Walker, Sara Imari},
  year = {2023},
  month = nov,
  journal = {Astrobiology},
  volume = {23},

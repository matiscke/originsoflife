}

@article{Hardegree-Ullman2025,
  title = {Bioverse: {{Giant Magellan Telescope}} and {{Extremely Large Telescope Direct Imaging}} and {{High-resolution Spectroscopy Assessment}}---{{Surveying Exo-Earth O2}} and {{Testing}} the {{Habitable Zone Oxygen Hypothesis}}},
  shorttitle = {Bioverse},

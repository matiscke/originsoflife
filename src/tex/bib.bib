@article{Garcia-Sage2017,
  title = {On the {{Magnetic Protection}} of the {{Atmosphere}} of {{Proxima Centauri}} b},
  author = {{Garcia-Sage}, K. and Glocer, A. and Drake, J. J. and Gronoff, G. and Cohen, O.},

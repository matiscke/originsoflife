  shorttitle = {Large {{Interferometer For Exoplanets}} ({{LIFE}})},
  author = {Alei, E. and Quanz, S. P. and Konrad, B. S. and Garvin, E. O. and Kofman, V. and Mandell, A. and Angerhausen, D. and Molli{\`e}re, P. and Meyer, M. R. and Robinson, T. and Rugheimer, S. and Collaboration, the LIFE},

@article{Fox2013,
  title = {A {{Possible Prebiotic Origin}} on {{Volcanic Islands}} of {{Oligopyrrole-Type Photopigments}} and {{Electron Transfer Cofactors}}},
  author = {Fox, Stefan and Strasdeit, Henry},
  year = {2013},

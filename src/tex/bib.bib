@article{Fernandes2019,
  title = {Hints for a {{Turnover}} at the {{Snow Line}} in the {{Giant Planet Occurrence Rate}}},
  author = {Fernandes, Rachel B. and Mulders, Gijs D. and Pascucci, Ilaria and Mordasini, Christoph and Emsenhuber, Alexandre},

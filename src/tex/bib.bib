  author = {Fernandes, Rachel B. and {Hardegree-Ullman}, Kevin K. and Pascucci, Ilaria and Bergsten, Galen J. and Mulders, Gijs D. and Cunha, Katia and Mamajek, Eric E. and Pearson, Kyle A. and Feiden, Gregory A. and Curtis, Jason L.},

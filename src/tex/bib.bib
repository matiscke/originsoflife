}

@article{Hasegawa2019b,
  title = {Close-in Giant-Planet Formation via in-Situ Gas Accretion and Their Natal Disk Properties},
  author = {Hasegawa, Yasuhiro and Yu, Tze Yeung Mathew and Hansen, Bradley M. S.},

@article{Bergsten2022,
  title = {The {{Demographics}} of {{Kepler}}'s {{Earths}} and {{Super-Earths}} into the {{Habitable Zone}}},
  author = {Bergsten, Galen J. and Pascucci, Ilaria and Mulders, Gijs D. and Fernandes, Rachel B. and Koskinen, Tommi T.},

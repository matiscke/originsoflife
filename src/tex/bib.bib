@article{Mansfield2018,
  title = {An {{HST}}/{{WFC3 Thermal Emission Spectrum}} of the {{Hot Jupiter HAT-P-7b}}},
  author = {Mansfield, Megan and Bean, Jacob L. and Line, Michael R. and Parmentier, Vivien and Kreidberg, Laura and D{\'e}sert, Jean-Michel and Fortney, Jonathan J. and Stevenson, Kevin B. and Arcangeli, Jacob and Dragomir, Diana},
  year = {2018},

@article{Todd2022,
  title = {Ferrocyanide Survival under near Ultraviolet (300--400~Nm) Irradiation on Early {{Earth}}},
  author = {Todd, Zoe R. and Lozano, Gabriella G. and Kufner, Corinna L. and Sasselov, Dimitar D. and Catling, David C.},
  year = {2022},
  month = oct,
  journal = {Geochimica et Cosmochimica Acta},
  volume = {335},
  pages = {1--10},
  issn = {0016-7037},
  doi = {10.1016/j.gca.2022.08.012},
  urldate = {2023-09-29},
  abstract = {Prebiotic lake environments containing ferrocyanide could have fostered origins of life chemistry on early Earth. Ferrocyanide can act to concentrate hydrogen cyanide (HCN), a prebiotically important molecule. Additionally, ferrocyanide, coupled with sulfite, can participate in an ultraviolet (UV)-driven photoredox cycle to generate solvated electrons, which can reduce cyanide to form all four major building blocks of life: sugars, amino acids, nucleotides, and lipid precursors. However, longer wavelength UV light ({$\sim$}300--400~nm) causes photoaquation of ferrocyanide into pentacyanoaquaferrate, Fe(CN)5H2O. This species can either regain cyanide to reform ferrocyanide or ultimately lose cyanide ligands, which removes ferrocyanide from solution. Here, we investigate this near ultraviolet (300--400~nm) UV-driven loss of ferrocyanide. In addition to determining the wavelength dependence of the loss and the implications from the UV environment on early Earth, we also study the effects of pH, temperature, and concentration. We find that in dilute, slightly alkaline solutions, ferrocyanide would degrade significantly on the order of minutes under the near UV radiation expected on early Earth. We further determine that the lifetime of ferrocyanide is extended at more alkaline pH, lower temperatures, and higher concentrations. Under a reasonable set of planetary conditions, we find that ferrocyanide lifetimes in irradiated environments range from minutes to hours, or longer. Our results can help to determine the constraints implied by the UV-driven loss of ferrocyanide in prebiotic environments. We assess the potential environmental limits and circumstances that would allow for successful retention of significant amounts of ferrocyanide in prebiotic lakes; we further evaluate how ferrocyanide photoaquation may fit in to the larger network of reactions potentially occurring throughout prebiotic chemistry. For example, our experiments show that CN- can be released from ferrocyanide evaporite salts by aqueous dissolution and UV light, making it potentially available for prebiotic reactions. These results can aid in the construction of consistent and plausible circumstances for prebiotic chemistry on early Earth.},
  keywords = {originsoflife,UV},
  file = {/Users/schlecker/papers/UA/Todd2022.pdf;/Users/schlecker/Zotero/storage/D8B7PAS7/S0016703722003969.html}
}

@article{Toresdahl2023,
  title = {Training Patterns Associated with Injury in {{New York City Marathon}} Runners},
  author = {Toresdahl, Brett G. and Metzl, Jordan D. and Kinderknecht, James and McElheny, Kathryn and de Mille, Polly and Quijano, Brianna and Fontana, Mark A.},
  year = {2023},
  month = feb,
  journal = {British Journal of Sports Medicine},
  volume = {57},
  number = {3},
  pages = {146--152},
  publisher = {{BMJ Publishing Group Ltd and British Association of Sport and Exercise Medicine}},
  issn = {0306-3674, 1473-0480},
  doi = {10.1136/bjsports-2022-105670},
  urldate = {2023-08-22},
  abstract = {Objective Training patterns are commonly implicated in running injuries. The purpose of this study was to measure the incidence of injury and illness among marathon runners and the association of injuries with training patterns and workload. Methods Runners registered for the New York City Marathon were eligible to enrol and prospectively monitored during the 16 weeks before the marathon, divided into 4-week `training quarters' (TQ) numbered TQ1--TQ4. Training runs were tracked using Strava, a web and mobile platform for tracking exercise. Runners were surveyed at the end of each TQ on injury and illness, and to verify all training runs were recorded. Acute:chronic workload ratio (ACWR) was calculated by dividing the running distance in the past 7 days by the running distance in the past 28 days and analysed using ratio thresholds of 1.3 and 1.5. Results A total of 735 runners participated, mean age 41.0 (SD 10.7) and 46.0\% female. Runners tracked 49 195 training runs. The incidence of injury during training was 40.0\% (294/735), and the incidence of injury during or immediately after the marathon was 16.0\% (112/699). The incidence of illness during training was 27.2\% (200/735). Those reporting an initial injury during TQ3 averaged less distance/week during TQ2 compared with uninjured runners, 27.7 vs 31.9 miles/week (p=0.018). Runners reporting an initial injury during TQ1 had more days when the ACWR during TQ1 was {$\geq$}1.5 compared with uninjured runners (injured IQR (0--3) days vs uninjured (0--1) days, p=0.009). Multivariable logistic regression for training injuries found an association with the number of days when the ACWR was {$\geq$}1.5 (OR 1.06, 95\% CI (1.02 to 1.10), p=0.002). Conclusion Increases in training volume {$\geq$}1.5 ACWR were associated with more injuries among runners training for a marathon. These findings can inform training recommendations and injury prevention programmes for distance runners.},
  chapter = {Original research},
  copyright = {{\copyright} Author(s) (or their employer(s)) 2023. No commercial re-use. See rights and permissions. Published by BMJ.},
  langid = {english},
  pmid = {36113976},
  keywords = {health,offtopic},
  file = {/Users/schlecker/papers/UA/Toresdahl2023.pdf}
}


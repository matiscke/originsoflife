@article{Fulton2018,
  title = {The {{California-Kepler Survey}}. {{VII}}. {{Precise Planet Radii Leveraging Gaia DR2 Reveal}} the {{Stellar Mass Dependence}} of the {{Planet Radius Gap}}},

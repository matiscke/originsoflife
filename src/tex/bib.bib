  shorttitle = {{{HAMSTER}}},
  author = {Roccetti, Giulia and Bugliaro, Luca and G{\"o}dde, Felix and Emde, Claudia and Hamann, Ulrich and Manev, Mihail and Sterzik, Michael and Wehrum, Cedric},
  year = {2024},
  month = mar,
  eprint = {2407.18030},
  primaryclass = {astro-ph, physics:physics},
